// .devcontainer/devcontainer.json
{
	"name": "RTMP Monitor Dev",
	// We reference BOTH the main docker-compose in the project root
	// AND our override inside .devcontainer
	"dockerComposeFile": [
	  "../docker-compose.yml",
	  "docker-compose.yml"
	],
  
	// Must match the service name in your docker-compose
	"service": "rtmpmonitor01",
  
	// Where VS Code should open by default inside the container
	"workspaceFolder": "/workspaces/rtmpmonitor",
  
	// Tells devcontainer to let our override set the command
	"overrideCommand": false,
  
	// We can install recommended extensions or set editor preferences
	"customizations": {
	  "vscode": {
		"extensions": [
		  "ms-python.python",
		  "ms-python.vscode-pylance"
		]
	  }
	},
  
	// If you want to run something after container creation, such as pip install:
	"postCreateCommand": "pip install -r requirements.txt",
  
	// More config as needed...
	"settings": {
	  "terminal.integrated.defaultProfile.linux": "sh"
	}
  }